{
  "name": "lwc-builder",
  "displayName": "lwc-builder",
  "publisher": "lwc-builder",
  "description": "VSCode extension to build LWC easily",
  "version": "0.1.5",
  "license": "BSD-3-Clause",
  "author": "@albarivas",
  "repository": "https://github.com/developerforce/lwc-builder",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lwc-builder.openLWCBuilder"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lwc-builder.openLWCBuilder",
        "title": "Open LWC Builder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "lwc-builder.openLWCBuilder",
          "title": "Open LWC Builder",
          "when": "explorerResourceIsFolder && resourceFilename == lwc && sfdx:project_opened"
        }
      ],
      "commandPalette": [
        {
          "command": "lwc-builder.openLWCBuilder",
          "when": "sfdx:project_opened"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint:verify": "eslint src --ext ts",
    "lint": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
    "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
    "postinstall": "husky install"
  },
  "dependencies": {
    "lwc-builder-ui": "^0.1.22"
  },
  "devDependencies": {
    "@salesforce/dev-config": "2.1.2",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.10",
    "@types/vscode": "^1.58.1",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "eslint": "^7.32.0",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-jsdoc": "^36.0.8",
    "eslint-plugin-prettier": "^3.4.0",
    "glob": "^7.1.7",
    "husky": "^7.0.1",
    "mocha": "^9.0.3",
    "pinst": "^2.1.6",
    "prettier": "^2.3.2",
    "shelljs": "0.8.4",
    "typescript": "^4.3.5",
    "vscode-test": "^1.6.1"
  }
}
